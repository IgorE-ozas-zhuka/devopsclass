version: '3'
services:
  vprodb:
    image: {{nexus_host}}:{{nexus_docker_port}}/{{nexus_docker_repo}}/mysql:V2
    ports:
      - "3306:3306"
    volumes:
      - vprodbdata:/var/lib/mysql
    environment:
      MYSQL_ROOT_PASSWORD: {{mysql_root_pass}}
      MYSQL_DATABASE: {{mysql_db_name}}

  vprocache01:
    image: {{nexus_host}}:{{nexus_docker_port}}/{{nexus_docker_repo}}/memcached:V2
    ports:
      - "11211:11211"

  vpromq01:
    image: {{nexus_host}}:{{nexus_docker_port}}/{{nexus_docker_repo}}/rabbitmq:V2
    ports:
      - "5672:5672"
    environment:
      RABBITMQ_DEFAULT_USER: {{rabbitmq_user}}
      RABBITMQ_DEFAULT_PASS: {{rabbitmq_pass}}

  vproapp:
    image: {{nexus_host}}:{{nexus_docker_port}}/{{nexus_docker_repo}}/tomcat:V2
    ports:
      - "8087:8080"
    volumes:
      - vproappdata:/usr/local/tomcat/webapps

  vproweb:
    image: {{nexus_host}}:{{nexus_docker_port}}/{{nexus_docker_repo}}/nginx:V2
    ports:
      - "80:80"
volumes:
  vprodbdata: {}
  vproappdata: {}
